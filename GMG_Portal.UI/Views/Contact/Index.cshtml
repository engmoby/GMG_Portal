<style>
    .btn-file {
        position: relative;
        overflow: hidden;
    }

    .btn-file input[type=file] {
        position: absolute;
        top: 0;
        right: 0;
        min-width: 100%;
        min-height: 100%;
        font-size: 100px;
        text-align: right;
        filter: alpha(opacity=0);
        opacity: 0;
        background: red;
        cursor: inherit;
        display: block;
    }

    input[readonly] {
        background-color: white !important;
        cursor: text !important;
    }
</style>
<div ng-controller="ContactController">

<div ba-panel>
    <table class="table table-hover table-condensed" st-table="TableData" st-safe-src="Careers">
        <thead>
        <tr class="toolbar">
            <th colspan="2">
                <div class="input-group">
                    <span class="input-group-addon addon-left"><i class="fa fa-search" aria-hidden="true"></i></span>
                    <input st-search="" class="form-control" placeholder="@Contact.txtSearchLbl" type="text" />
                </div>
            </th>
            <th colspan="1"></th>
            <th>
                <div class="input-group">
                    <button class="btn btn-primary btn-with-icon" ng-click="open(null)"><i class="fa fa-plus" aria-hidden="true"></i>@Career.BtnAdd</button>
                </div>
            </th>
        </tr>

        <tr class="sortable">
            <th>#</th>
            <th st-sort="Image">@Contact.TitleDisplay</th>
            <th st-sort="Image">@Contact.PhoneNo1</th>
            <th st-sort="Title">@Contact.PhoneNo2</th>
            <th st-sort="Desc">@</th>
            <th>Actions</th>
        </tr>

        </thead>
        <tbody>
        <tr ng-repeat="Contact in TableData">
            <td ng-class="{'red-text': Contact.IsDeleted == true}">{{$index+1}}</td>
            <td ng-class="{'red-text': Contact.IsDeleted == true}">{{Contact.DisplayValueAddress}}</td>
            <td ng-class="{'red-text': Contact.IsDeleted == true}">{{Contact.PhoneNo1}}</td>
            <td ng-class="{'red-text': Contact.IsDeleted == true}">{{Contact.PhoneNo2}}</td>
            <td ng-class="{'red-text': Contact.IsDeleted == true}">{{Contact.MailNo1}}</td>
            <td>
                <div class="buttons" ng-show="!Contact.IsDeleted">
                    <button class="btn btn-primary editable-table-button btn-xs btn-with-icon" ng-click="open(Contact)"><i class="fa fa-pencil" aria-hidden="true"></i>@Career.TableBtnEdit</button>
                    <button class="btn btn-danger editable-table-button btn-xs btn-with-icon" ng-confirm="Confirm Delete ?" ng-click="Delete(Contact)"><i class="fa fa-trash-o" aria-hidden="true"></i>@Contact.TableBtnDelete</button>
                </div>
                <div class="buttons restore-button" ng-show="Contact.IsDeleted">
                    <button class="center-block btn btn-default  restore-button btn-xs btn-with-icon" ng-click="Restore(Contact)"><i class="fa fa-undo" aria-hidden="true"></i>Restore</button>
                </div>
            </td>
        </tr>
        <tr ng-show="TableData.length==0">
            <td colspan="4">
                @Shared.GridNoData
            </td>
        </tr>
        </tbody>
        <tfoot>
        <tr>
            <td colspan="4" class="text-center">
                <div st-pagination="" st-items-by-page="10"></div>
            </td>
        </tr>
        </tfoot>
    </table>
</div>



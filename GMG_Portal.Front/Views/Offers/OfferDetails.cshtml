@using Front.Helpers
@model  GMG_Portal.API.Models.SystemParameters.OfferModel
@{
    ViewBag.Title = "OfferDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mg-page-title parallax">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>@Model.OfferTitleDictionary[Common.CurrentLang]</h2>
            </div>
        </div>
    </div>
</div>
<div class="mg-single-room-price">
    <div class="mg-srp-inner">
        @foreach (var c in Common.Currency)
        {
            if (c.Id == Model.Currency)
            {
                <sub  style="margin-right: 5px;">
                    @c.TitleDictionary[Common.CurrentLang]
                </sub>
            }

        }
        @Model.Price<span>/@Front.Resources.Global.Hotel_Night</span>
    </div>
</div>
<div class="mg-single-room">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mg-gallery-container-offers">

                    <img id="myBtn" src="@System.Configuration.ConfigurationManager.AppSettings["Serverbackend"]/Uploads/Offers/@Model.Image" style="max-width: 400px;
                                                                                                   margin-left: 31%;
                                                                                                   margin-right: 18%;cursor: pointer;" />

                    <!-- The Modal -->
                    <div id="myModal" class="modal">

                        <!-- Modal content -->
                        <div class="modal-content">
                            <span class="close">&times;</span>
                            <div class="modal-body">
                                <img src="@System.Configuration.ConfigurationManager.AppSettings["Serverbackend"]/Uploads/Offers/@Model.Image" style="height: 500px;width: 500px" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mg-single-room-txt">
                    <h2 class="mg-sec-left-title">@Model.OfferTitleDictionary[Common.CurrentLang]</h2>

                    <div class="display-field">

                        @Html.PreserveNewLines(@Model.OfferDescDictionary[Common.CurrentLang])
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    // Get the modal
    var modal = document.getElementById('myModal');

    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks the button, open the modal
    btn.onclick = function () {
        modal.style.display = "block";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>
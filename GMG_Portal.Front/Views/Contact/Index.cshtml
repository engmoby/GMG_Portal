@using GMG_Portal.API.Models.SystemParameters
@model   GMG_Portal.API.Models.SystemParameters.ContactUs.ContactUs
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mg-page-title parallax">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Contact Us</h2>
                <p></p>
            </div>
        </div>
    </div>
</div>

<div class="mg-page">
    <div class="container">
        <div class="row">

            <div class="col-md-5">
                <h2 class="mg-sec-left-title">Send an inquiry</h2>
                <form id="myForm">
                    <div class="mg-contact-form-input">
                        <label for="FirstName">Full Name</label>
                        <input type="text" class="form-control" id="FirstName" data-validation="length alphanumeric" data-validation-length="min4">
                    </div>
                    <div class="mg-contact-form-input">
                        <label for="Email">E-mail</label>
                        <input type="email" class="form-control" id="Email" data-validation="email">
                    </div>
                    <div class="mg-contact-form-input">
                        <label for="PhoneNo">Phone</label>
                        <input type="number" class="form-control" id="PhoneNo" data-validation="required">
                    </div>
                    <div class="mg-contact-form-input">
                        <label for="Message">Message</label>
                        <textarea class="form-control" id="Message" rows="5" data-validation="required"></textarea>
                    </div>
                    <button class="btn btn-dark-main pull-right" onclick="$.validate()">Send</button>
                </form>


                <div id="MSGCONTACT" style="color: red;"> </div>
            </div>
            <div class="col-md-7">
                <h2 class="mg-sec-left-title">Office Address</h2>
                <ul class="mg-contact-info">
                    <li><i class="fa fa-map-marker"></i> @Model.DisplayValueAddress</li>
                    <li><i class="fa fa-phone"></i> @Model.PhoneNo1 </li>
                    <li><i class="fa fa-phone"></i> @Model.PhoneNo2 </li>
                    <li><i class="fa fa-phone"></i> @Model.PostalCode </li>
                    <li><i class="fa fa-phone"></i> @Model.Mailbox </li>
                    <li><i class="fa fa-whatsapp"></i>   @Model.WhatsApp  </li>
                    <li><i class="fa fa-envelope"></i> <a href="mailto:#"> @Model.MailNo1 </a></li>
                    <li><i class="fa fa-envelope"></i> <a href="mailto:#"> @Model.MailNo2 </a></li>
                </ul>
                <div id="mg-map" class="mg-map"></div>
            </div>
        </div>
    </div>
</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"></script>

<script>
    $.validate({
        form: '#myForm',
        modules: 'security',
        onError: function ($form) {
            alert('Validation of form ' + $form.attr('id') + ' failed!');
        },
        onSuccess: function ($form) {
            sendContact();
            return false;
        }

    });
</script>


<script type="text/javascript">









    function sendContact() {



        var contact = {
            FirstName: $("#FirstName").val(),
            Email: $("#Email").val(),
            PhoneNo: $("#PhoneNo").val(),
            Message: $("#Message").val()

        }

        $('#MSGCONTACT').html('sending..');

        $.ajax({
            url: 'http://gmgapi.azurewebsites.net/SystemParameters/ContactForm/Save',
            type: 'post',
            dataType: 'json',
            success: function (data) {
                $('#MSGCONTACT').html("Form Submitted , Thank you !");
            },
            data: contact
        });
    }

</script>
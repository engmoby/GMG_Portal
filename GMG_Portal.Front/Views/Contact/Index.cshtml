@using GMG_Portal.API.Models.SystemParameters
@model   GMG_Portal.API.Models.SystemParameters.ContactUs.ContactUs
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mg-page-title parallax">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Contact Us</h2>
                <p></p>
            </div>
        </div>
    </div>
</div>

<div class="mg-page">
    <div class="container">
        <div class="row">
					
            <div class="col-md-5">
                <h2 class="mg-sec-left-title">Send an inquiry</h2>
                <form id="myForm">
                    <div class="mg-contact-form-input">
                        <label for="FirstName">Full Name</label>
                        <input type="text" class="form-control" id="FirstName">
                    </div>
                    <div class="mg-contact-form-input">
                        <label for="Email">E-mail</label>
                        <input type="text" class="form-control" id="Email">
                    </div>
                    <div class="mg-contact-form-input">
                        <label for="PhoneNo">Phone</label>
                        <input type="text" class="form-control" id="PhoneNo">
                    </div>
                    <div class="mg-contact-form-input">
                        <label for="Message">Message</label>
                        <textarea class="form-control" id="Message" rows="5"></textarea>
                    </div>
                </form>
                <button class="btn btn-dark-main pull-right" onclick="send()">Send</button>
    <div id="MSG" style="color: red;"> </div>
            </div>
            <div class="col-md-7">
                <h2 class="mg-sec-left-title">Office Address</h2>
                <p>@Model.DisplayValueAddress</p>
                <ul class="mg-contact-info">
                    <li><i class="fa fa-map-marker"></i> @Model.DisplayValueAddress</li>
                    <li><i class="fa fa-phone"></i> @Model.PhoneNo1 </li>
                    <li><i class="fa fa-phone"></i> @Model.PhoneNo2 </li>
                    <li><i class="fa fa-envelope"></i> <a href="mailto:#"> @Model.MailNo1 </a></li>
                </ul>
                <div id="mg-map" class="mg-map"></div>
            </div>
        </div>
    </div>
</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    
    function send() {
        var contact = {
            FirstName: $("#FirstName").val(),
            Email: $("#Email").val(),
            PhoneNo: $("#PhoneNo").val(),
            Message: $("#Message").val()

        }

        $('#target').html('sending..');

        $.ajax({
            url: 'http://gmgapi.azurewebsites.net/SystemParameters/ContactForm/Save',
            type: 'post',
            dataType: 'json',
            success: function (data) {
                $('#MSG').html("Form Submitted , Thank you !");
            },
            data: contact
        });
    }
  
</script>
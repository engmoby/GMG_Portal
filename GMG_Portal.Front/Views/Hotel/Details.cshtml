@model GMG_Portal.Data.Hotel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mg-page-title parallax">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>@Model.DisplayValue</h2>
            </div>
        </div>
    </div>
</div>
<div class="mg-single-room-price">
    <div class="mg-srp-inner">$@Model.PriceStart<span>/Night</span></div>
</div>
<div class="mg-single-room">
    <div class="container">
        <div class="row">
         
            <div class="row">
          
                <ul>
                    <li> Check In: <i class="fa fa-clock-o"></i> @Model.CheckIn.AsDateTime().Date.ToString("hh:mm tt")</li>
                    <li> Check Out: <i class="fa fa-clock-o"></i> @Model.CheckOut.AsDateTime().Date.ToString("hh:mm tt")</li>
                </ul>
                       
            </div>
            
            <div class="col-md-7">
                <div class="mg-gallery-container">

                    <ul class="mg-gallery" id="mg-gallery">
                        @foreach (var n in Model.ImageList)
                        {
                            <li><img src="@System.Configuration.ConfigurationManager.AppSettings["Serverbackend"]/Uploads/Hotels/@n.Image" style="width: 103%; height: 362px;" alt="Partner Logo"></li>
                        }
                    </ul>

                    <ul class="mg-gallery-thumb" id="mg-gallery-thumb">
                        @foreach (var n in Model.ImageList)
                        {
                            <li>
                                <img src="@System.Configuration.ConfigurationManager.AppSettings["Serverbackend"]/Uploads/Hotels/@n.Image" style="width: 98px;height: 80px;" alt="Partner Logo">
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-5 mg-room-fecilities">
                <h2 class="mg-sec-left-title">Room Fecilities</h2>
                <div class="row">

                    @for (int i = 0; i < Model.FeaturesList.Count; i++)
                    {
                        if (i > 0 && i % 2 == 0)
                        {
                            @:</div><div class="row"> 
                        }
                <div class="col-xs-6">
                    <ul>
                        <li><i class="@Model.FeaturesList[i].Icon"></i> @Model.FeaturesList[i].DisplayValue</li>
                    </ul>
                </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mg-single-room-txt">
                    <h2 class="mg-sec-left-title">Room Description</h2>
                    <p>@Model.DisplayValueDesc.</p>
                </div>
            </div>
        </div>
        <iframe height="300px" width="700px" src="https://maps.google.com/maps?q=@Model.Late,@Model.Long&hl=es;z=14&amp;output=embed" class="mg-map"></iframe>
       

@using GMG_Portal.API.Models.SystemParameters
@using GMG_Portal.API.Models.SystemParameters.ContactUs
@model  Front.Models.HomeModels

@{
    ViewBag.Title = "Owners";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mg-page-title parallax">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Leadership</h2>
                <p>Here are the Visionary Minds Behind our Success</p>
            </div>
        </div>
    </div>
</div>
<div class="mg-team pb70">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mg-sec-title">
                    <h2>Success Team</h2>
                    <p></p>
                </div>
            </div>
        </div>
        <div class="row">
        @foreach (Owners owner in Model.Owners)
        {
            <div class="col-md-@owner.Bootstrap">
                <div class="mg-team-member">
                    <figure>
                        <img src="~/content/images/member1.png" alt="" class="img-responsive">
                    </figure>
                    <div class="mg-team-member-overlayer"></div>
                    <div class="mg-team-info">
                        <h3>@owner.DisplayValueName</h3>
                        <strong>@owner.DisplayValuePosition</strong>
                        <ul class="mg-team-member-social">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
</div>


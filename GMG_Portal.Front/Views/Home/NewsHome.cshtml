@using GMG_Portal.API.Models.SystemParameters 
@using GMG_Portal.API.Models.Hotels.Hotel 
@model GMG_Portal.API.Models.General.HomeModels


<div class="mg-news-gallery">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <h2 class="mg-sec-left-title">@Front.Resources.Global.Home_RecentNews</h2>
                <ul class="mg-recnt-posts">

                    @if (Model.News.Count != 0)
                    {
                        foreach (News t in Model.News.Take(3))
                        {
                            <li>
                                <div class="mg-recnt-post">


                                    <div class="mg-rp-date">

                                        <div class="mg-rp-date">
                                            @t.CreationTime.Value.Day
                                        <div class="mg-rp-month">@t.CreationTime.Value.ToString("MMM")</div>
                                    </div>

                                </div>
                                    <h3 class="display-field">
                                        <a href="/News/Details/@t.Id" >@t.DisplayValue </a>
                                </h3> 
                                    @if (@t.DisplayValueDesc.Length >= 81)
                                    {
                                        <p> @t.DisplayValueDesc.ToString().Substring(0, 81)</p>

                                    }
                                    else
                                    {
                                        <p>  @t.DisplayValueDesc</p>
                                    }


                            </div>
                        </li>
                        }
                    }
                    else
                    {
                        <p>No Recent News</p>

                    }

                </ul>
            </div>
            <div class="col-md-7">
                <h2 class="mg-sec-left-title">@Front.Resources.Global.Home_OurGallery</h2>
                <div class="mg-gallery-container">
                    <ul class="mg-gallery" id="mg-gallery">
                        @foreach (HotelImages gallery in Model.Gallery)
                        {

                            <li><img src="@System.Configuration.ConfigurationManager.AppSettings["Serverbackend"]/Uploads/Hotels/@gallery.Image" style="width: 103%; height: 362px;" alt=""></li>

                        }
                    </ul>
                    <ul class="mg-gallery-thumb" id="mg-gallery-thumb">
                        @foreach (HotelImages gallery in Model.Gallery)
                        {
                            <li>
                                <img src="@System.Configuration.ConfigurationManager.AppSettings["Serverbackend"]/Uploads/Hotels/@gallery.Image" style="width: 98px;
                                                                                                           height: 80px;" alt=" ">
                            </li>

                        }
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>

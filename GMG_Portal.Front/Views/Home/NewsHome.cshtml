<div class="mg-news-gallery">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <h2 class="mg-sec-left-title">Recent News</h2>
                <ul class="mg-recnt-posts">
                    @for (var i = 0; i < Model.News.Count; i++)
                    { 

                        <li>
                            <div class="mg-recnt-post">
                 
                             
                                <div class="mg-rp-date">
                                    <div class="mg-rp-month">1</div>
                                    @*<div class="mg-rp-month">@Model.News[i].LastModificationTime.Date.ToShortDateString()</div>*@
                                </div>
                                <h3><a href="#">@Model.News[i].DisplayValue</a>
                                </h3>
                                <p>@Model.News[i].DisplayValueDesc</p>
                            </div>
                        </li>
                    }
                
                </ul>
            </div>
            <div class="col-md-7">
                <h2 class="mg-sec-left-title">Our Gallery</h2>

                <div class="mg-gallery-container">
                    <ul class="mg-gallery" id="mg-gallery">
                        <li><img src="~/Content/images/gallery-01.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-02.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-05.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-06.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-07.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-08.png" alt="Partner Logo"></li>
                    </ul>
                    <ul class="mg-gallery-thumb" id="mg-gallery-thumb">
                        <li><img src="~/Content/images/gallery-thumb-01.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-thumb-02.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-thumb-05.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-thumb-06.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-thumb-07.png" alt="Partner Logo"></li>
                        <li><img src="~/Content/images/gallery-thumb-08.png" alt="Partner Logo"></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

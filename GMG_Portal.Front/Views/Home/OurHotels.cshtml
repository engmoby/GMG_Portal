@using Front.Helpers
@model GMG_Portal.API.Models.General.HomeModels

@if (Model.Hotels != null)
{

    <div class="mg-best-rooms">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mg-sec-title">
                        <h2>@Front.Resources.Global.Home_OurHotelsTitle</h2>
                        <p>@Front.Resources.Global.Home_OurHotelsDesc</p>

                        @*<div id="domMessage" style="display:none;">
                                <h1>We are processing your request.  Please be patient.</h1>
                            </div>
                            <div id='ajax_loader' style="position: fixed; left: 50%; top: 50%; display: none;">
                                <div class="preloader" id="divLoader"></div>
                            </div>
                            <input id="pageDemo2" class="demo" type="submit" value="Custom ">
                            <input id="pageDemo4" class="demo" type="submit" value="Custom Message">*@
                    </div>
                    <div class="row">

                        @foreach (var hotel in Model.Hotels.Take(3).Where(x=>x.ImageList.Count > 0))
                        {
                            <div class="col-sm-4">
                                <a href="/Hotel/Details/@hotel.Id" style="color: #edf0f3 !important;">
                                    <figure class="mg-room">
                                        <img src="@System.Configuration.ConfigurationManager.AppSettings["Serverbackend"]/Uploads/Hotels/@hotel.ImageList[0].Image" alt="img11" class="img-responsive" style="width: 103%; height: 211px;">
                                        <figcaption>

                                            @if (@hotel.TitleDictionary[Common.CurrentLang].Length >= 17)
                                            {
                                                <h2>@hotel.TitleDictionary[Common.CurrentLang].ToString().Substring(0, 17)</h2>
                                            }
                                            else
                                            {
                                                <h2>@hotel.TitleDictionary[Common.CurrentLang]</h2>

                                            }
                                            <div class="mg-room-rating">
                                                <i class="fa fa-star"></i> @hotel.Rate
                                            </div>
                                            <div class="mg-room-price">
                                                    @foreach (var c in Model.Currency)
                                                    {
                                                        if (c.Id == hotel.Currency)
                                                        {
                                                            <sub>
                                                                @c.TitleDictionary[Common.CurrentLang] 
                                                            </sub>

                                                        }
                                                    }
                                            @hotel.PriceStart<span style="font-size: 18px;">/@Front.Resources.Global.Hotel_Night</span>
                                        </div>
                                        @if (@hotel.DescDictionary[Common.CurrentLang].Length >= 81)
                                        {
                                            <p> @hotel.DescDictionary[Common.CurrentLang].ToString().Substring(0, 81)</p>

                                        }
                                        else
                                        {
                                            <p> @hotel.DescDictionary[Common.CurrentLang]</p>
                                        }
                                        <a href="/Hotel/Details/@hotel.Id" class="btn btn-link ">@Front.Resources.Global.SeeMore <i class="fa fa-angle-double-right"></i></a>
                                    </figcaption>
                                </figure>
                            </a>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>  }
<div class="mg-best-rooms">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mg-sec-title">
                    <h2>Our Hotels</h2>
                    <p>Luxury Hotels</p>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <figure class="mg-room">
                            <img src="http://localhost:19056/Uploads/@Model.Hotel[0].Image" alt="img11" class="img-responsive">
                            <figcaption>
                                <h2>@Model.Hotel[0].DisplayValue</h2>
                                <div class="mg-room-rating"><i class="fa fa-star"></i> @Model.Hotel[0].Rate</div>
                                <div class="mg-room-price">@Model.Hotel[0].PriceStart /Night</div>
                                <p>@Model.Hotel[0].DisplayValueDesc</p>
                                <a href="#" class="btn btn-link">View Details <i class="fa fa-angle-double-right"></i></a>
                                <a href="#" class="btn btn-main">Book</a>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-sm-4">

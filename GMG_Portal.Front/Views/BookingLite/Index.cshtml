@model GMG_Portal.API.Models.Hotels.Reservation.Reservation

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mg-page-title parallax">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Booking</h2>
                <p></p>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("Index", "BookingLite", null, FormMethod.Post, new { enctype = "multipart/form-data" }))

     
{
    @Html.AntiForgeryToken()
    @Html.Hidden("CheckIn", Model.CheckIn);
    @Html.Hidden("CheckOut", Model.CheckOut);
    @Html.Hidden("Adult", Model.Adult);
    @Html.Hidden("Child", Model.Child);




    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mg-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mg-booking-form">

                        <ul class="nav nav-tabs" role="tablist">

                            <li role="presentation" class="active">
                                <a href="#personal-info" aria-controls="personal-info" role="tab" data-toggle="tab"><span class="mg-bs-tab-num">1</span><span class="mg-bs-bar"></span>Personal Info</a>
                            </li>

                            <li role="presentation">
                                <a   aria-controls="thank-you" role="tab" data-toggle="tab"><span class="mg-bs-tab-num">2</span>Thank You</a>
                            </li>
                        </ul>

                        <div class="tab-content">

                            <div role="tabpanel" class="tab-pane fade in active" id="personal-info">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mg-book-form-personal">
                                            <h2 class="mg-sec-left-title">Personal Info</h2>
                                            <div class="row pb40">
                                                <div class="col-md-6">
                                                    <div class="mg-book-form-input">
                                                        <label>First Name</label>
                                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="mg-book-form-input">
                                                        <label>Email</label>
                                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    </div>

                                                </div>
                                                <div class="col-md-6">
                                                    <div class="mg-book-form-input">
                                                        <label>Last Name</label>
                                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="mg-book-form-input">
                                                        <label>Phone Number / Cell</label>
                                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                                    </div>



                                                </div>
                                            </div>

                                            @*<div class="clearfix mg-terms-input">
                                                <div class="pull-right">

                                                </div>
                                            </div>*@

                                            @*<input type="submit" value="Create" class="btn btn-default" />*@
                                            
                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" id="btnSubmit" class="btn btn-dark-main pull-right" value="Create">
                                                    @*<input type="submit" value="Create" class="btn btn-default" />*@
                                                </div>
                                            </div>
                                            @*<input type="submit" value="Reserve" class="btn btn-dark-main btn-next-tab pull-right" />*@
                                            @*<a href="#payment" class="btn btn-dark-main btn-next-tab pull-right">Next</a>*@
                                            @*<a href="#select-room" class="btn btn-default btn-prev-tab pull-left">Back</a>*@
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mg-cart-container">
                                            <aside class="mg-widget mt50" id="mg-room-cart">
                                                <h2 class="mg-widget-title">Booking Details</h2>
                                                <div class="mg-widget-cart">
                                                    <div class="mg-cart-room">

                                                    </div>
                                                    <div class="mg-widget-cart-row">
                                                        <strong>Check In:</strong>
                                                        <span>@Request.QueryString["CheckIn"]</span>
                                                    </div>
                                                    <div class="mg-widget-cart-row">
                                                        <strong>Check Out:</strong>
                                                        <span>@Request.QueryString["CheckOut"]</span>
                                                    </div>
                                                    <div class="mg-widget-cart-row">
                                                        <strong>Adults:</strong>
                                                        <span>@Request.QueryString["Adult"]</span>
                                                    </div>
                                                    <div class="mg-widget-cart-row">
                                                        <strong>Child:</strong>
                                                        <span>@Request.QueryString["Child"]</span>
                                                    </div>
                                                    <div class="mg-cart-total">

                                                    </div>
                                                </div>
                                            </aside>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div role="tabpanel" class="tab-pane fade" id="thank-you">
                                <div class="alert alert-success alert-dismissible clearfix">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <div class="mg-alert-icon"><i class="fa fa-check"></i></div>
                                    <h3 class="mg-alert-payment">Thank you! Your booking is Registered, one of our Reservation office will contact Shortly</h3>
                                </div>
                                <div class="mg-cart-container mg-paid">
                                    <aside class="mg-widget mt50" id="mg-room-cart">
                                        <h2 class="mg-widget-title">Booking Details</h2>
                                        <div class="mg-widget-cart">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="mg-cart-room">

                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <h3 class="mg-payment-id">Your Reservatiom ID: #105152396140</h3>
                                                    <div class="mg-widget-cart-row">
                                                        <strong>First Name:</strong>
                                                        <span></span>
                                                    </div>

                                                    <div class="mg-widget-cart-row">
                                                        <strong>last Name:</strong>
                                                        <span></span>
                                                    </div>

                                                    <div class="mg-widget-cart-row">
                                                        <strong>Check In:</strong>
                                                        <span>@Request.QueryString["CheckIn"]</span>
                                                    </div>
                                                    <div class="mg-widget-cart-row">
                                                        <strong>Check Out:</strong>
                                                        <span>@Request.QueryString["CheckOut"]</span>
                                                    </div>
                                                    <div class="mg-widget-cart-row">
                                                        <strong>Adults:</strong>
                                                        <span>@Request.QueryString["Adult"]</span>
                                                    </div>
                                                    <div class="mg-widget-cart-row">
                                                        <strong>Child:</strong>
                                                        <span>@Request.QueryString["Child"]</span>
                                                    </div>

                                                    <div class="mg-cart-total">

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </aside>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


}

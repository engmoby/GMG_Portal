@using System.Globalization
@using System.Threading
@using GMG_Portal.API.Models.SystemParameters
@model  AboutAll
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mg-page-title parallax">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Mobark International Company</h2>
                <p>for Trading & Real Estate Investment Ltd</p> 
            </div>
        </div>
    </div>
</div>
<div class="mg-about-features">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="mg-about-us-txt">
                    <div class="mg-sec-title">
                        <h2>@Model.AboutTitle</h2>
                   
                    </div>
                   <p>@Model.AboutDesc </p> 
                </div>
            </div>
            <div class="col-md-6">
                <div class="video-responsive">
                    <div style="position:relative;height:0;padding-bottom:70%"><iframe src="https://www.youtube.com/embed/@Model.AboutVideoUrl?ecver=2" style="position:absolute;width:100%;height:100%;left:0" width="500" height="350" frameborder="0" allowfullscreen></iframe></div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="mg-about-features">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="mg-about-us-txt">
                    <div class="mg-sec-title">
                        <h2>@Model.VisionTitle</h2>
                        <p></p>
                    </div>
                    <p>@Model.VisionDesc</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mg-about-us-txt">
                    <div class="mg-sec-title">
                        <h2>@Model.MissionTitle </h2>
                        <p></p>
                    </div>
                    <p>@Model.MissionDesc </p>
                </div>
            </div>
        </div>
    </div>
</div>





@*Our Values*@ 

<div class="mg-about-features">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mg-sec-title">
                    <h2>Our Core Values</h2>
                </div>
                <hr />
            </div>
        </div>
    <div class="row">
    
    @for (int i = 0; i < Model.CoreValueses.Count; i++)
    {
        if (i > 0 && i % 3 == 0)
        {
            @:</div><div class="row"> 
        }

            <div class="col-sm-4">
                <div class="mg-feature">
                    <div class="mg-feature-icon-title">
                 
                        <h3>@Model.CoreValueses[i].DisplayValue</h3>
                    </div>
                 
                </div>
            </div>
    }
        </div>
    </div>
</div>

	
